@model InfnetMVC.Models.Funcionario

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="mt-5 mb-4">Confirmar Exclusão</h1>

    <h3>Tem certeza de que deseja excluir este funcionário?</h3>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Detalhes do Funcionário</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Endereço:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>

                <dt class="col-sm-3">Telefone:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Data de Nascimento:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNascimento)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
