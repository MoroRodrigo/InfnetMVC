@model InfnetMVC.Models.Departamento

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="mt-5 mb-4">Novo Departamento</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome do Departamento:</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Local" class="control-label">Localização:</label>
            <input asp-for="Local" class="form-control" />
            <span asp-validation-for="Local" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
